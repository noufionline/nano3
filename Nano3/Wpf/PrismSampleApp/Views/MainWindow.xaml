<Window x:Class="PrismSampleApp.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:prism="http://prismlibrary.com/"
        xmlns:dxlc="http://schemas.devexpress.com/winfx/2008/xaml/layoutcontrol"
        xmlns:grid="clr-namespace:DevExpress.Xpf.Grid;assembly=DevExpress.Xpf.Grid.v19.2"
        prism:ViewModelLocator.AutoWireViewModel="True"
        Title="{Binding Title}" Height="350" Width="525" >
    <Grid>
        <!--<ContentControl prism:RegionManager.RegionName="ContentRegion" />-->
        <dxlc:LayoutControl Orientation="Vertical">
            <dxlc:LayoutGroup>
                <grid:GridControl ItemsSource="{Binding Customers}">
                    <grid:GridControl.Columns>
                        <grid:GridColumn FieldName="Name"/>
                    </grid:GridControl.Columns>
                    <grid:GridControl.View>
                        <grid:TableView AutoWidth="True" ShowGroupPanel="False"/>
                    </grid:GridControl.View>
                </grid:GridControl>
            </dxlc:LayoutGroup>
            <Button Content="Open File" Height="25" Width="150" Command="{Binding OpenFileCommand}" />
            <Button Content="Fetch Data" Height="25" Width="150" Command="{Binding FetchDataCommand}" />

        </dxlc:LayoutControl>
    </Grid>
</Window>
