<div class="user-info">
    <AuthorizeView>
        <Authorizing>
            <text>...</text>
        </Authorizing>
        <Authorized>
            <img src="images/login.svg" />
            <div>
                <span class="username">@context.User.Claims.FirstOrDefault(x=> x.Type=="name")?.Value</span>
                <a class="sign-out" href="LogoutIDP">Sign out</a>
            </div>
        </Authorized>
        <NotAuthorized>
            <div>
                <a class="sign-in" href="LoginIDP">Sign in</a>
            </div>
        </NotAuthorized>
    </AuthorizeView>
</div>
