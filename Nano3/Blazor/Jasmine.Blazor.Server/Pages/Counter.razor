@page "/counter"

@inject Microsoft.AspNetCore.Http.IHttpContextAccessor httpContextAccessor

<h1>Counter</h1>

<p>Current count: @currentCount</p>

<RadzenButton  Click="@IncrementCount" Text="Click me"></RadzenButton>

@code {
    int currentCount = 0;

    void IncrementCount()
    {
        currentCount++;
    }

}
